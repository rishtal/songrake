<%= devise_error_messages! %>

<section>
  <div class="row">
    <div class="span12 offset3">
      <div class="row">
        <div class="home-title">Forgot your password?</div>
      </div>
      <div class="row">
        <div id="form">

          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "simple_form" }) do |f| %>


            <div class="input">
              <%= f.label :email %>
              <%= f.email_field :email %>
            </div>

            <div><%= f.submit "Send me reset instructions", :class => "btn primary", :id =>"button" %></div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>

<%= render :partial => "devise/shared/links" %>