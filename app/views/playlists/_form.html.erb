<%= simple_form_for(@playlist) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :description, :input_html => {:rows => 3} %>
    <%= f.input :playlist_type, :collection => Playlist::LIST_TYPE, :prompt => "Select..." %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
