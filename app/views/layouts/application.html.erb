<!DOCTYPE html>
<html lang="en">
<head>
  <title>SongRake</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<div class="topbar">
  <div class="fill">
    <div class="container">
      <a class="brand" href="/">SongRake</a>
      <ul class="nav">
        <li><%= link_to "Browse Playlists", playlists_url %></li>
        <li><%= link_to "Create Playlist", new_playlist_url %></li>
      </ul>
      <div id="user-login" class="pull-right">

        <% if user_signed_in? %>
          Signed in as <%= current_user.email %>. Not you?
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> |
          <%= link_to('My Profile', user_profile_path(current_user)) %>
        <% else %>
          <%= link_to('Login', new_user_session_path)  %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="content">
    <%= yield %>
  </div>
</div>

<div id="footer">
  <div class="container">
    <div class="row">
      <%= link_to "About", about_path %>
    </div>
  </div>
</div>

<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-27550707-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
</body>
</html>
