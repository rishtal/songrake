<%= render "flash_messages/notice" %>

<br><br>
<div class="create_playlist">
    <button data-controls-modal="modal-from-dom" data-backdrop="true" data-keyboard="true" class="btn large primary">Create New Playlist</button>
</div>
<div class="row">
  <div class="span4">
    <div class="sidebar">
      <div class="row">
          <div class="span4"><b>Username:</b>&nbsp;&nbsp;<%= @user.username %></div>
      </div>
      <div class="row">
          <div class="span4"><b>Email:</b>&nbsp;&nbsp;<%= @user.email %></div>
      </div>
      <div class="row">
          <div class="span4"><b>Karma:</b>&nbsp;&nbsp;<%= @user.karma %></div>
      </div>
    </div>
  </div>
  <div class="span9">
    <ul class="tabs" data-tabs="tabs">
      <li class="active"><a href="#myplaylist">My Playlists</a></li>
      <li><a href="#joinedplaylist">Joined Playlists</a></li>
    </ul>
      <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="myplaylist">
            <% if show_created_playlists %>
              <table>
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                </tr>
                </thead>
                <tbody>
                <% @created_playlists.each do |playlist| %>
                  <tr>
                    <td><%= playlist.name %></td>
                    <td><%= playlist.description %></td>
                    <td><%= link_to "show", playlist_path(playlist.id) %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            <% end %>
        </div>
        <div class="tab-pane" id="joinedplaylist">
            <% if show_joined_playlists %>
              <table>
                <thead>
                <tr>
                  <th>Name</th>
                </tr>
                </thead>
                <tbody>
                <% @joined_playlists.each do |playlist| %>
                  <tr>
                    <td><%= playlist.name %></td>
                    <td><%= link_to "show", playlist_path(playlist.id) %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            <% end %>
        </div>
    </div>
  </div>
</div>
<div id="modal-from-dom" class="modal hide fade" style="display: none; ">
            <div class="modal-header">
              <a href="#" class="close">Ã—</a>
              <h3>Creat New Playlist</h3>
            </div>
            <div class="modal-body">
                <%= render "playlists/form" %>
            </div>
            <!--
            <div class="modal-footer">
              <a href="#" class="btn primary">Primary</a>
              <a href="#" class="btn secondary">Secondary</a>
            </div>
            -->
</div>
